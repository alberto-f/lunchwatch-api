{
  "name": "lunchwatch-api",
  "version": "0.0.1",
  "description": "LunchWatch Menu Aggregator API",
  "author": "Joonas Tiala <joonas.tiala@gmail.com>",
  "keywords": [
    "javascript",
    "node",
    "express",
    "es6",
    "api"
  ],
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jtiala/lunchwatch-api"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "precommit": "lint-staged",
    "lint": "eslint src test; exit 0",
    "lint:fix": "eslint src test --fix; exit 0",
    "prettify": "prettier --single-quote --print-width 120 --write \"src/**/*.js\" \"test/**/*.js\"",
    "seed": "knex seed:run --knexfile src/knexfile.js",
    "migrate": "knex migrate:latest --knexfile src/knexfile.js",
    "rollback": "knex migrate:rollback --knexfile src/knexfile.js",
    "make:seeder": "knex seed:make --knexfile src/knexfile.js",
    "make:migration": "knex migrate:make --knexfile src/knexfile.js",
    "test": "NODE_ENV=test mocha --recursive --require babel-register test",
    "test:coverage": "NODE_ENV=test nyc --require babel-register --reporter lcov --reporter text mocha --recursive test",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.12.1",
    "bookshelf-camelcase": "^2.0.1",
    "boom": "^7.1.1",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.1.0",
    "knex": "^0.14.2",
    "lodash": "^4.17.4",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "serve-favicon": "^2.4.5",
    "swagger-jsdoc": "^1.9.7",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.11",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.10.8"
  }
}
